<?xml version="1.0"?>
<config>
    <modules>
        <YiJi_Yjpay>
            <version>1.0.0</version>
        </YiJi_Yjpay>
    </modules>

    <global>
    	　<blocks>
		　　　　<adminhtml>
		　　　　　　<rewrite>
		　　　　　　　　<sales_order_view>YiJi_Yjpay_Block_Adminhtml_Sales_Order_View</sales_order_view>
		　　　　　　</rewrite>
		　　　　</adminhtml>
		　　</blocks>
    	<fieldsets>
    		 <sales_convert_quote_payment>
    		 	<cc_firstname>
    		 		<to_order_payment>*</to_order_payment>
    		 	</cc_firstname>
    		 	<cc_emali>
    		 		<to_order_payment>*</to_order_payment>
    		 	</cc_emali>
    		 	<phone_number>
    		 		<to_order_payment>*</to_order_payment>
    		 	</phone_number>
    		 	<cc_cid>
    		 		<to_order_payment>*</to_order_payment>
    		 	</cc_cid>
    		 	<cc_number>
    		 		<to_order_payment>*</to_order_payment>
    		 	</cc_number>
    		 </sales_convert_quote_payment>
    	</fieldsets>
        <models>
            <yjpay>
                <class>YiJi_Yjpay_Model</class>
                <resourceModel>yjpay_mysql4</resourceModel>
            </yjpay>
            <yjpay_mysql4>
                <class>YiJi_Yjpay_Model_Mysql4</class>
                <entities>
                    <api_debug><table>yjpay_api_debug</table></api_debug>
                </entities>
            </yjpay_mysql4>
        </models>
        <resources>
            <yjpay_setup>
                <setup>
                    <module>YiJi_Yjpay</module>
                    <class>YiJi_Yjpay_Model_Mysql4_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </yjpay_setup>
            <yjpay_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </yjpay_write>
            <yjpay_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </yjpay_read>
        </resources>
        <blocks>
            <yjpay><class>YiJi_Yjpay_Block</class></yjpay>
    	</blocks>
		  <helpers>
		  	   <yjpay>
		  	   	   <class>YiJi_Yjpay_Helper</class>
		  	   </yjpay>
		  </helpers>
    </global>
    <frontend>
        <secure_url>
            <yjpay_payment>/yjpay/payment</yjpay_payment>
        </secure_url>
        <routers>
            <yjpay>
                <use>standard</use>
                <args>
                    <module>YiJi_Yjpay</module>
                    <frontName>yjpay</frontName>
                </args>
            </yjpay>
        </routers>
        <layout>
            <updates>
                <yjpay>
                    <file>yjpay.xml</file>
                </yjpay>
            </updates>
        </layout>
    </frontend>
    <default>
        <payment>
            <yjpay_payment>
                  <model>yjpay/payment</model>
                  <title>CreditCard payment</title>
                  <allowspecific>0</allowspecific>
                  <transaction_type>O</transaction_type>
            </yjpay_payment>
        </payment>
    </default>

</config>
