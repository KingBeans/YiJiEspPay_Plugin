<?xml version="1.0"?>
<config>
   <sections>
        <payment>
            <groups>
                <yjpay_payment module="yjpay">
                    <label>YIJIFU Payment for WEB</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>300</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>0</show_in_store>
                    <fields>
                    	<!-- 是否开启 -->
                        <active translate="label">
                            <label>Enabled</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </active>
                        <title translate="label comment">
                            <label>Title</label>
							  <comment>
								<![CDATA[Would be displayed at the frontend payment method selection list.<br /><span class="notice">This is a required field</span>]]>
							  </comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </title>
                         <!-- 网站地址 -->
                       <!--  <web_site translate="label">
                            <label>Website URL</label>
                           <frontend_type>text</frontend_type>
                           <sort_order>3</sort_order>
                           <show_in_default>1</show_in_default>
                           <show_in_website>1</show_in_website>
                           <show_in_store>0</show_in_store>
                        </web_site> -->
                        
                        <!-- 网关地址	访问易极付的网关地址 -->
                        <pay_gateway translate="label">
                           <label>Gateway URL</label>
                           <frontend_type>text</frontend_type>
                           <sort_order>3</sort_order>
                           <show_in_default>1</show_in_default>
                           <show_in_website>1</show_in_website>
                           <show_in_store>0</show_in_store>
                       </pay_gateway>
                        <!-- 商户id -->
                        <merchant_partnerId translate="label">
                            <label>Merchant PartnerId</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>4</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </merchant_partnerId>
                        <merchant_userId translate="label">
                            <label>Yijifu User ID</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </merchant_userId>
                        <!-- 安全key	商户在易极付的唯一安全key -->
                        <secretKey translate="label">
                            <label>Security code</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>6</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </secretKey>
                        <!-- 商户名称 -->
                        <merchant_name translate="label">
                            <label>Merchant Name</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>7</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </merchant_name>
                        <!-- 商户邮箱 -->
                        <merchant_email translate="label">
                            <label>Merchant Email</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>8</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </merchant_email>
                        <!-- 订单状态 -->
                        <order_status translate="label">
                            <label>New order status</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_order_status</source_model>
                            <sort_order>9</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
		                </order_status>
                        <!-- 支付类型 -->
                        <orderType translate="label">
                            <label>Settlement type</label>
                            <frontend_type>select</frontend_type>
                            <source_model>yjpay/source_ordertype</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
		                </orderType>
                        <!-- 支付模式 -->
                        <payType translate="label">
                            <label>Payment type</label>
                            <frontend_type>select</frontend_type>
                            <source_model>yjpay/source_paytype</source_model>
                            <sort_order>11</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </payType>
                        <servceType translate="label">
                            <label>Display styles</label>
                            <frontend_type>select</frontend_type>
                            <source_model>yjpay/source_servicetype</source_model>
                            <sort_order>12</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </servceType>
						<sort_order translate="label">
                            <label>Sort order</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>13</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </sort_order>
                    </fields>
                </yjpay_payment>
            </groups>
        </payment>
    </sections>
</config>
